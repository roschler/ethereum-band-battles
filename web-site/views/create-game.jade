//- View for the Create Game page.

extends layout


//- NOTE: The page title is now set by the initialize functions in the MAIN page.

block header_css
    link(rel='stylesheet', href='/stylesheets/create-game-style.css', type='text/css')

block content
    // Browserified version of solidity-helpers-misc-cs.js.
    script(type="text/javascript", src="/javascripts/browserified-files/bundle.js")
    // Support code for the create game page, now in Browserify bundle.
    // script(type="text/javascript", src="/javascripts/page-support/create-game-page-support.js")

    style.
        /* Set the page width here so each page can have its own settings.
            The page-div div is defined in layout.jade */
        div#page-div {
            max-width: 100%;
        }

        div#main-div {
            padding: 3px;
        }



    // ------------------------------------ HANDLEBARS TEMPLATES --------------------------------------

    // This template renders an online user.
    include ./includes/chat-room-online-user

    // This template renders a chat message.
    include ./includes/chat-room-message

    // ------------------------- MAIN CONTENT -------------
    div(id="main-div", class="container m3 mx-auto col col-12")

        // ------------------------ QUADRANT 1: YouTube player.
        div(id="youtube-quadrant-div", class="col-2 quadrant-top-left")
            p(class="quadrant-title") YouTube Player

            // Include the elements for a YouTube layer.
            include ./includes/youtube-player-section.jade

        // ------------------------ QUADRANT 2: Online Users list.
        div(id="player-list-quadrant-div", class="col-2  quadrant-top-right")
            p(class="quadrant-title") Player List
                // Online users sortable/draggable list.
                div(id="online-users-list-div", class="vertical-scroll-bar")
                    ul(id="online-users-list-ul", class="list-group sortable")

        // ------------------------ QUADRANT 3: Form entry area.
        div(id="form-entry-quadrant-div", class="col-2  quadrant-bottom-left")

            // p(class="quadrant-title") Form Entry

            // The form for game creation.
            include includes/form-game-creation.jade

            // The form for waiting for players.
            include includes/form-waiting-for-players.jade

            // The form for guest players to enter the game.
            include includes/form-guest-entry.jade

            // The form for playing the game.
            include includes/form-playing-game

            // The form for when the game is over.
            include includes/form-game-over

            // The form for when Metamask is not detected.
            include includes/form-metamask-not-found

        // ------------------------ QUADRANT 4: Chat message area.
        div(id="chat-messages-quadrant-div", class="col-2  quadrant-bottom-right")
            p(class="quadrant-title") Chat Room
                div(id="chat-messages-div", class="player-list vertical-scroll-bar")
                    ul(id="chat-message-list-ul", class="container")
                div(id="chat-message-entry-div")
                    input(id="chat-message-input")
                    button(id="send-chat-btn", class="btn btn-default" type="submit")
                        i(class="glyphicon glyphicon-send")







